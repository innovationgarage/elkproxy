{
    "upstream": "http://elasticsearch:9200",
    
    "auths": [
        {
            "type": "cookie",
            "args": {
                "name": "mycookie"
            }
        }
    ],
    "query_filters": [
        {
            "type": "template",
            "args": {
                "match": "$[@.query.*.bool.filter.*.term.type is 'index-pattern']",
                "filter": {
                    "term": {
                        "config.username" : {"$": "$.kwargs.metadata.username"}
                    }
                }
            }
        },
        {
            "type": "template",
            "args": {
                "match": "$[@.body.aggs.indices.terms.field is '_index' and @.body.aggs.indices.terms.size is 120]"
            }
        },
        {
            "type": "template",
            "args": {
                "filter": {
                    "query_string": {
                        "query": "/styles/ad-blocker.css",
                        "analyze_wildcard": true,
                        "default_field": "*"
                    }
                }
            }
        }
    ],
    "doc_savers": [
        {
            "type": "template",
            "args": {
                "match": "$[@.body.type is 'index-pattern']",
                "template": {
                    "config": {
                        "username": {"$": "$.kwargs.metadata.username"},
                        "_": {"$": "([$.body.config]+[{}])[0] + @template()"}
                    },
                    "_": {"$": "$.body + @template()"}
                }
            }
        },
        {
            "type": "template",
            "args": {
                "match": "$[@.kwargs.path is '_template/kibana_index_template:.kibana' and http('http://elasticsearch:9200/_template/kibana_index_template:.kibana', {'method': 'head'}).status is 404]"
            }
        },
        {
            "type": "return",
            "args": {
                "match": "$[@.kwargs.path is '_template/kibana_index_template:.kibana']",
                "document": {"response": "{}", "status":200}
            }
        },
        {
            "type": "template",
            "args": {
                "template": {
                    "username": {"$": "$.kwargs.metadata.username"},
                    "_": {"$": "$.body + @template()"}
                }
            }
        }        
    ],

    "logging": {
        "version": 1,
        "loggers": {
            "werkzeug": {
                "level": "WARN",
                "handlers": ["screen"]
            },
            "elkproxy.proxy.request": {
                "level": "ERROR",
                "handlers": []
            },
            "elkproxy.proxy.plugins.auths": {
                "level": "ERROR",
                "handlers": []
            },
            "elkproxy": {
                "level": "INFO",
                "handlers": ["screen"]
            }
        },
        "handlers": {
            "screen": {
                "class": "logging.StreamHandler",
                "formatter": "text"
            }
        },
        "formatters": {
            "text": {
                "format": "%(message)s"
            }
        }
    }
}
